<Window x:Class="JoyOs.Windows.Dialogs.OneTextBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Окно ввода" Width="350" 
        WindowStyle="ToolWindow" 
        WindowStartupLocation="CenterOwner" SizeToContent="Height">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.874,1.197"
                           StartPoint="0.126,-0.197">
            <GradientStop Color="#CCCCCC"
                      Offset="0" />
            <GradientStop Color="Gray"
                      Offset="1" />
            <GradientStop Color="White"
                      Offset="0.304" />
        </LinearGradientBrush>
    </Window.Background>
            <StackPanel Margin="10">
            <TextBlock Name="staticText" Text="Введите текст:" 
                       FontSize="14" TextWrapping="Wrap"
                       Margin="0,0,0,10" Foreground="DarkSlateGray"></TextBlock>
            <TextBox Name="textBox" Margin="0,0,0,10"></TextBox>
            <StackPanel  HorizontalAlignment="Center" Orientation="Horizontal">
                <Button Name="okButton" Content="Ок" Width="100" Height="26" HorizontalAlignment="Center" Margin="0,0,10,0" />
                <Button Name="cancelButton" Content="Отмена" Width="100" Height="26" HorizontalAlignment="Center" IsCancel="True" Visibility="Collapsed" />
            </StackPanel>
        </StackPanel>
</Window>
